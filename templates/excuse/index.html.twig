{% extends 'base.html.twig' %}

{% block title %}Excuse index{% endblock %}

{% block body %}
<div class="row">
    <div class="col">
        <h2>Liste des excuses de dev</h2>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for excuse in excuses %}
                {% if excuse.isActive %}
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <p class="card-text">
                                    {{ excuse.contenu }}
                                    <a class="text-decoration-none text-dark"
                                        href="{{ path('excuse_show', {'id': excuse.id}) }}">
                                        <i class="fas fa-link"></i>
                                    </a>
                                </p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">
                                    Le {{ excuse.createdAt ? excuse.createdAt|date('d-m-Y H:i:s') : '' }},
                                    par {{ excuse.auteur }}
                                </small>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="pagination justify-content-center px-2 my-5">
            {{ knp_pagination_render(excuses) }}
        </div>
    </div>
</div>
{% endblock %}